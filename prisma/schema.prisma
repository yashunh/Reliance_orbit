generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  username    String?
  email       String  @unique
  phoneNumber String?
  status      String  @default("Lead")
}

model Quotation {
  id               Int      @id @default(autoincrement())
  email            String   @unique
  price            Int?
  distance         Float?
  route            String?
  duration         String?
  pickupdDate      String?
  pickupdTime      String?
  pickupAddress    Json?
  dropDate         String?
  dropTime         String?
  dropAddress      Json?
  vanType          String?
  worker           Int?
  itemsToDismantle Int?     @default(0)
  itemsToAssemble  Int?     @default(0)
  stoppage         String[]
  fromLocation     Json?
  toLocation       Json?
  details          Json?
}

model Booking {
  id               Int      @id @default(autoincrement())
  username         String
  email            String
  phoneNumber      String
  price            Int
  distance         Float
  route            String
  duration         String
  pickupdDate      String
  pickupdTime      String
  pickupAddress    Json
  dropDate         String
  dropTime         String
  dropAddress      Json
  vanType          String
  worker           Int
  itemsToDismantle Int      @default(0)
  itemsToAssemble  Int      @default(0)
  stoppage         String[]
  fromLocation     Json
  toLocation       Json
  details          Json
  quotationRef     Int
  createdAt        DateTime @default(now())
}
