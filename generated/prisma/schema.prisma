generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  username    String
  email       String
  phoneNumber String
  orders      Order[]
}

model Order {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  price        Int
  distance     Float
  route        String
  fromLocation Int
  dateTime     DateTime
  pickupdDate  DateTime
  dropDate     DateTime
  from         Location @relation("fromLocation", fields: [fromLocation], references: [id])
  toLocation   Int
  to           Location @relation("toLocation", fields: [toLocation], references: [id])
}

model Location {
  id           Int     @id @default(autoincrement())
  address      String
  floor        Int     @default(0)
  lift         Boolean @default(false)
  propertyType String?
  from         Order[] @relation("fromLocation")
  to           Order[] @relation("toLocation")
}
